@model IEnumerable<Ferramenta_Scrumt.MODEL.Home>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
  <!--body wrapper start-->

<div class="wrapper">
    <div class="row states-info">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="panel write-bg">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-4">
                                <i class="nc-icon nc-spaceship"></i>
                            </div>
                            <div class="col-xs-8">
                                <span class="state-title"> Projetos</span>
                                <h4>@Html.DisplayFor(modelItem => item.totalprojeto)</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel write-bg">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-4">
                                <i class="nc-icon nc-single-copy-04"></i>
                            </div>
                            <div class="col-xs-8">
                                <span class="state-title">  Histórias</span>
                                <h4>@Html.DisplayFor(modelItem => item.totalhistorias)</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel write-bg">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-4">
                                <i class="nc-icon nc-bullet-list-67"></i>
                            </div>
                            <div class="col-xs-8">
                                <span class="state-title">  Testes em Espera  </span>
                                <h4>@Html.DisplayFor(modelItem => item.totalteste)</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel write-bg">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-4">
                                <i class="nc-icon nc-single-02"></i>
                            </div>
                            <div class="col-xs-8">
                                <span class="state-title">  Membros do time  </span>
                                <h4>5</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-7">
        <div class="panel">
            <header class="panel-heading">
                Histórias
                <span class="label label-purple">Importância</span>
                <span class="tools pull-right">

                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                </span>

            </header>
            <div class="panel-body">

                <ul class="goal-progress">
                    @foreach (var item in ViewBag.Historia)
                    {
                        <li>

                            <div class="details">
                                <div class="title">
                                    <a href="#"> @item.Group.Name</a>
                                    <em class="small"> História: @item.Text</em>
                                    @if (item.Value == "Alta")
                                    {
                                        <span class="label label-danger">Alta</span>
                                    }
                                    @if (item.Value == "Média")
                                    {
                                        <span class="label label-warning">Média</span>
                                    }
                                    @if (item.Value == "Baixa")
                                    {
                                        <span class="label label-success">Baixa</span>
                                    }
                                </div>
                            </div>
                        </li>
                    }
                </ul>
                <div class="text-center"><a href="/Backlog/Index">Ver todas as Histórias</a></div>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <section class="panel">
            <header class="panel-heading">
                Testes em Execução
                <span class="tools pull-right">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                </span>
            </header>
            <div class="panel-body">
                <div id="pie-chart-donut" class="pie-chart">
                    <div id="pie-donutContainer" style="width: 100%;height:300px; text-align: left;">
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-12">
        <div class="panel">
            <header class="panel-heading">
                Testes
                <span class="label label-purple">Sequência de Testes</span>
                <span class="tools pull-right">

                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    <a href="javascript:;" class="fa fa-times"></a>
                </span>

            </header>
            <div class="panel-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-11 col-xs-12 col-sm-3">
                            <ul class="timeline timeline-horizontal">
                                <li class="col-md-3 col-xs-2 col-sm-1 timeline-item">
                                    <div class="timeline-badge primary"><i class="glyphicon glyphicon-check"></i></div>
                                    <div class="timeline-panel">
                                        <div class="timeline-heading">
                                            <h4 class="timeline-title">Teste de Unidade</h4>
                                            <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> ScrumT</small></p>
                                        </div>
                                        <div class="timeline-body">
                                            <p>Os testes de unidade são realizados em nível de componente e classe verificando cada parte do código.</p>
                                        </div>
                                    </div>
                                </li>
                                <li class="col-md-3 col-xs-2 col-sm-1 timeline-item ">
                                    <div class="timeline-badge success"><i class="glyphicon glyphicon-check"></i></div>
                                    <div class="timeline-panel">
                                        <div class="timeline-heading">
                                            <h4 class="timeline-title">Teste de Integração</h4>
                                            <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> ScrumT</small></p>
                                        </div>
                                        <div class="timeline-body">
                                            <p>O teste de integração verifica o comportamento dos componentes rodando em conjunto</p>
                                        </div>
                                    </div>
                                </li>
                                <li class="col-md-3 col-xs-2 col-sm-1  timeline-item">
                                    <div class="timeline-badge danger"><i class="glyphicon glyphicon-check"></i></div>
                                    <div class="timeline-panel">
                                        <div class="timeline-heading">
                                            <h4 class="timeline-title">Teste de Sistema</h4>
                                            <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i>ScrumT</small></p>
                                        </div>
                                        <div class="timeline-body">
                                            <p>O foco deste teste são as funcionalidades e para documentação que será registrado</p>
                                        </div>
                                    </div>
                                </li>
                                <li class="col-md-3 col-xs-2 col-sm-1  timeline-item">
                                    <div class="timeline-badge warning"><i class="glyphicon glyphicon-check"></i></div>
                                    <div class="timeline-panel">
                                        <div class="timeline-heading">
                                            <h4 class="timeline-title">Teste de Aceitação</h4>
                                            <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i>ScrumT</small></p>
                                        </div>
                                        <div class="timeline-body">
                                            <p>Antes da entrega é necessário que haja a verificação e validação dos componentes desenvolvidos pelos Stakeholders de uso final</p>
                                        </div>
                                    </div>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            </div>
    </div>
        </div>
        <!--body wrapper end-->
