@model Ferramenta_Scrumt.MODEL.ReleaseBacklog

@{
    ViewBag.Title = "Adicionar Release";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-heading">
    <h3>
        Release Backlog
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="/Home/Index">Home</a>
        </li>
        <li>
            <a href="/Backlog/Index">Backlog</a>
        </li>
        <li class="active">Adicionar Release</li>
    </ul>

</div>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Adicionar Release
                        </header>
                        <div class="panel-body">
                            <form role="form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Historia, "Historia", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("ID_Pbacklog", (SelectList)ViewBag.Historia, "Selecione a Historia", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Historia, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Nome_Membro, "Membro", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("ID_Membro", (SelectList)ViewBag.Nome, "Selecione o membro", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Nome_Membro, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Estimativa_inicio, "Estimativa Inicio", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Estimativa_inicio, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Estimativa_inicio, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Estimativa_fim, "Estimativa Fim", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Estimativa_fim, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Estimativa_fim, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Situacao_Quadro, "Situacao Quadro de Tarefas", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("Situacao_Quadro", new SelectList(ViewBag.Situacao, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Situacao_Quadro, "", new { @class = "text-danger" })
                                </div>
                            </form>
                            <div class="form-group">
                                <input type="submit" value="Adicionar" class="btn btn-primary" />
                                @Html.ActionLink("Voltar", "Index", 0, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    }
</body>