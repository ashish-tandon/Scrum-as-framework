@model Ferramenta_Scrumt.MODEL.TesteSistema

@{
    ViewBag.Title = "Adicionar Teste de Sistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-heading">
    <h3>
        Testes de Sistema
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="/Home/Index">Home</a>
        </li>
        <li>
            <a href="/TesteSistema/Index">Teste de Sistema</a>
        </li>
        <li class="active">Adicionar Teste de Sistema</li>
    </ul>

</div>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Adicionar Teste de Unidade
                        </header>
                        <div class="panel-body">
                            <form role="form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(model => model.Membro, "Membro", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("ID_Membro", (SelectList)ViewBag.Nome, "Selecione um Membro", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Membro, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(model => model.Data_Teste, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Data_Teste, "", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Data_Teste, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(model => model.Massa_Dados, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Massa_Dados, "", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Massa_Dados, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(model => model.Relatorio, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Relatorio, "", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Relatorio, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(model => model.Versao, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Versao, "", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Versao, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("Status", new SelectList(ViewBag.Statuss, "Value", "Text"), "Defina o Status", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(model => model.Falhas, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Falhas, "", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Falhas, "", new { @class = "text-danger" })
                                </div>
                            </form>
                            <div class="form-group">
                                <input type="submit" value="Adicionar" class="btn btn-primary" />
                                @Html.ActionLink("Voltar", "Index", 0, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    }

</body>

