@model Ferramenta_Scrumt.MODEL.TesteUnidade

@{
    ViewBag.Title = "Editar Teste de Unidade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-heading">
    <h3>
        Teste de Unidade
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="/Home/Index">Home</a>
        </li>
        <li>
            <a href="/Backlog/Index">Testes</a>
        </li>
        <li class="active">Editar Teste Unidade</li>
    </ul>

</div>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Editar Teste
                        </header>
                        <div class="panel-body">
                            <form role="form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Historia, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("ID_Backlog", (SelectList)ViewBag.Historia, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Historia, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Membro, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("ID_Membro", (SelectList)ViewBag.Nome, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Membro, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Classe, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Classe, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Classe, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("Status", new SelectList(ViewBag.Statusu, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </form>

                            <div class="form-group">
                                <input type="submit" formmethod="post" value="Salvar" class="btn btn-success" />
                                @Html.ActionLink("Voltar", "Index", 0, new { @class = "btn btn-danger" })
                            </div>

                        </div>
                    </section>
                </div>
            </div>
        </section>

    }
</body>