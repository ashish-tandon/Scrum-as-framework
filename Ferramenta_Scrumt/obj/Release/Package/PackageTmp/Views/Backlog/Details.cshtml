@model Ferramenta_Scrumt.MODEL.ProductBacklog

@{
    ViewBag.Title = "Detalhes História";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-heading">
    <h3>
        Product Backlog
    </h3>
    <div class="col-md-10 col-xs-8">
        <ul class="breadcrumb">
            <li>
                <a href="#">Home</a>
            </li>
            <li>
                <a href="#">Backlog</a>
            </li>
            <li class="#">Product Backlog</li>
            <li class="active">Detalhes da História</li>
        </ul>
    </div>

</div>
<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    <h4>Detalhes da História @Html.DisplayFor(model => model.Historia, new { htmlAttributes = new { @class = "form-control" } })</h4>
                    <hr />
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.DisplayFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Historia, "Historia: ", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.DisplayFor(model => model.Historia, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nome_Projeto, "Projeto: ", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.DisplayFor(model => model.Nome_Projeto, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Importancia, "Importancia: ", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.DisplayFor(model => model.Importancia, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Aceito, "Aceito: ", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.DisplayFor(model => model.Aceito, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                </header>
            </section>
            @Html.ActionLink("Editar", "Edit", new { id = Model.ID }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Voltar", "Index", 0, new { @class = "btn btn-danger" })
        </div>

    </div>
</div>
