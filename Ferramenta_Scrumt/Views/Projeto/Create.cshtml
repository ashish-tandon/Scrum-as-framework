@model Ferramenta_Scrumt.MODEL.Projeto


@{
    ViewBag.Title = "Adicionar Projeto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-heading">
    <h3>
        Projeto
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="/Home/Index">Home</a>
        </li>
        <li>
            <a href="/Projeto/Index">Projetos</a>
        </li>
        <li class="active">Adicionar Projeto</li>
    </ul>
</div>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        
                        <section class="panel">
                            <header class="panel-heading custom-tab">
                                <ul class="nav nav-tabs">
                                    <li class="active">
                                        <a href="#home2" data-toggle="tab">Projeto</a>
                                    </li>
                                    <li class="">
                                        <a style="cursor:pointer" onclick="location.href='@Url.Action("Create", "Equipe")'" data-toggle="tab">Membros</a>
                                </ul>
                            </header>
                            <div class="panel-body">
                                <div class="tab-content">
                                    <div class="tab-pane active" id="home2">
                                        <div class="panel-body">
                                            <form role="form">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="form-group col-md-12">
                                                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
                                                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    @Html.LabelFor(model => model.Data_Inicio, htmlAttributes: new { @class = "control-label col-md-2" })
                                                    @Html.EditorFor(model => model.Data_Inicio, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Data_Inicio, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="form-group col-md-6">
                                                    @Html.LabelFor(model => model.Data_Fim, htmlAttributes: new { @class = "control-label col-md-2" })
                                                    @Html.EditorFor(model => model.Data_Fim, "datefim", new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Data_Fim, "", new { @class = "text-danger" })
                                                </div>

                                            </form>
                                           
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="about2">
                                        <div class="container">
                                            <br>
                                            <h4>
                                                Equipe
                                            </h4>
                                            @Html.DropDownList("Nome_Membro", new SelectList(ViewBag.Nome_Membro, "Value", "Text"), htmlAttributes: new { @id = "pre-selected-options", multiple = "multiple" })
                                            <br>
                                        </div>
                                        <hr>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Adicionar" class="btn btn-primary" />
                                    @Html.ActionLink("Voltar", "Index", 0, new { @class = "btn btn-danger" })
                                </div>
                            </div>
                            
                        </section>
                         
                    </section>
                </div>
            </div>
        </section>
    }

</body>
