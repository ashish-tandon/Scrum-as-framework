                                <dd>
                                    @Html.DisplayFor(model => model.Nome_Projeto)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Historia)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Historia)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Importancia)
                                </dt>

                                <dd>
